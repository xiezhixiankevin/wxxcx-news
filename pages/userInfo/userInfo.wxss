
.item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.item .label {
  font-size: 28rpx;
  color: #333333;
  width: 200rpx;
}
.item .content {
  flex: 1;
  cursor: pointer;
  display: flex;
  align-items: center;
}
.saveButton {
  height: 80rpx;
  width: 200rpx;
  border-radius: 30rpx;
  background-color: #4d7fff;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 30rpx;
  border-bottom: 1rpx solid #e5e5e5;
}
.avatar-item .label {
  font-size: 28rpx;
  color: #333333;
  width: 200rpx;
}
.avatar-item .avatar-wrapper {
  width: 100rpx;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: aqua;
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
.avatar-item .avatar-wrapper .avatar {
  background-color: #4d7fff;
  width: 100%;
  height: 100%;
  object-fit: cover;
}